# Build stage - use Debian for glibc compatibility with go-nvml
FROM golang:1.24-bookworm AS builder

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    libc6-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /build

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build with CGO enabled
ARG VERSION
ARG COMMIT
ARG DATE

# Build for the native architecture (buildx handles the platform)
RUN CGO_ENABLED=1 \
    go build -ldflags="-s -w -X main.version=${VERSION} -X main.commit=${COMMIT} -X main.date=${DATE}" \
    -o vllm-chill ./cmd/autoscaler

# Final stage - use Debian slim for glibc compatibility at runtime
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy binary from builder
COPY --from=builder /build/vllm-chill /vllm-chill

EXPOSE 8080

ENTRYPOINT ["/vllm-chill"]
CMD ["serve"]
