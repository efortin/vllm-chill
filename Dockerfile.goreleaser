# Build stage
FROM golang:1.24-alpine AS builder

# Install build dependencies
RUN apk add --no-cache gcc musl-dev

WORKDIR /build

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build with CGO enabled
ARG VERSION
ARG COMMIT
ARG DATE

# Build for the native architecture (buildx handles the platform)
RUN CGO_ENABLED=1 \
    go build -ldflags="-s -w -X main.version=${VERSION} -X main.commit=${COMMIT} -X main.date=${DATE}" \
    -o vllm-chill ./cmd/autoscaler

# Final stage
FROM alpine:latest

# Install runtime dependencies
RUN apk add --no-cache ca-certificates

# Copy binary from builder
COPY --from=builder /build/vllm-chill /vllm-chill

EXPOSE 8080

ENTRYPOINT ["/vllm-chill"]
CMD ["serve"]
